@model IEnumerable<FoodOrder.Models.FoodItem>
@{
    Layout = null;
}

<div class="card shadow-sm border-0">
    <div class="card-body">
        <h5 class="mb-3">Latest</h5>
        <ul class="list-unstyled">
            @foreach (var item in Model)
            {
                <li class="d-flex align-items-center mb-3">
                    <img src="@item.ImageUrl" alt="@item.Name"
                        style="width:64px; height:64px; object-fit:cover; border-radius:8px;" class="me-3" />
                    <div class="flex-grow-1">
                        <a asp-controller="Menu" asp-action="Details" asp-route-id="@item.FoodId"
                            class="text-decoration-none fw-bold">@item.Name</a>
                        <div class="small text-muted">Rs. @item.Price</div>
                    </div>
                    <a asp-controller="Menu" asp-action="Details" asp-route-id="@item.FoodId"
                        class="btn btn-sm btn-outline-secondary ms-2">View</a>
                </li>
            }
        </ul>
    </div>
</div>