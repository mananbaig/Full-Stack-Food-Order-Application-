@model IEnumerable<FoodOrder.Models.FoodItem>
@{
    Layout = null;
}

<div class="card shadow-sm border-0">
    <div class="card-body">
        <h3 class="mb-4">Featured Items</h3>
        <div class="row g-3">
            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="card h-100">
                        <img src="@item.ImageUrl" class="card-img-top" style="height:160px; object-fit:cover;"
                            alt="@item.Name" />
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title mb-1">@item.Name</h5>
                            <p class="text-success fw-bold mb-2">Rs. @item.Price</p>
                            <p class="text-muted small mb-2">@item.Description?.Length > 80 ? item.Description.Substring(0,
                                77) + "..." : item.Description</p>
                            <div class="mt-auto">
                                <a asp-controller="Menu" asp-action="Details" asp-route-id="@item.FoodId"
                                    class="btn btn-outline-primary btn-sm me-2">View</a>
                                <a asp-controller="Menu" asp-action="Details" asp-route-id="@item.FoodId"
                                    class="btn btn-primary btn-sm">Order</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>