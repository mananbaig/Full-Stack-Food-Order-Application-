@model FoodItem

@{
    Layout = "_myLayout";
}

<section class="py-5">
    <div class="container">

        <nav aria-label="breadcrumb" class="mb-4">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a asp-controller="Home" asp-action="Index" class="text-decoration-none text-muted">
                        Home
                    </a>
                </li>
                <li class="breadcrumb-item">
                    <a asp-controller="Menu" asp-action="Index" class="text-decoration-none text-muted">
                        Menu
                    </a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">
                    @Model.Name
                </li>
            </ol>
        </nav>

        <div class="card shadow-sm border-0">
            <div class="row g-0">

                <div class="col-lg-6 col-md-6">
                    <div class="details-img-wrapper rounded-start d-flex align-items-center justify-content-center p-3" style="background:#f8f9fa;">
                        <img src="@Model.ImageUrl" alt="@Model.Name" class="details-img img-fluid" style="max-height:520px; object-fit:contain;" />
                    </div>
                </div>

                <div class="col-lg-6 col-md-6">
                    <div class="card-body p-4 p-lg-5">

                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <h1 class="fw-bold mb-0">@Model.Name</h1>

                            @if (Model.isAvailable)
                            {
                                <span class="badge bg-success">Available</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Unavailable</span>
                            }
                        </div>

                        <h2 class="text-success fw-bold mb-4">
                            Rs. @Model.Price
                        </h2>

                        <p class="text-muted mb-4">
                            @Model.Description
                        </p>

                        <hr class="my-4">

                        <form asp-controller="Menu" asp-action="AddToCart" method="post" id="details-add-form">
                            <input type="hidden" name="foodId" value="@Model.FoodId" />

                            <div class="row align-items-center g-3">
                                <div class="col-auto">
                                    <label class="form-label fw-bold m-0">Qty:</label>
                                </div>

                                <div class="col-auto">
                                    <div class="input-group qty-group" style="width:140px;">
                                        <button type="button" class="btn btn-outline-secondary btn-decrease"
                                            aria-label="Decrease">−</button>
                                        <input type="number" name="quantity" id="quantity"
                                            class="form-control text-center" value="1" min="1" max="99" />
                                        <button type="button" class="btn btn-outline-secondary btn-increase"
                                            aria-label="Increase">+</button>
                                    </div>
                                </div>

                                <div class="col">
                                    <button type="submit" class="btn btn-primary w-100 py-2" id="details-add-btn"
                                        @(Model.isAvailable ? "" : "disabled")>
                                        <i class="fas fa-cart-plus me-2"></i>
                                        Add to Cart
                                    </button>
                                </div>
                            </div>
                        </form>

                        <div class="mt-4 pt-2 d-flex align-items-center text-muted small">
                            <i class="fas fa-truck me-2"></i>
                            Free delivery on orders over Rs. 1500
                            <span class="mx-2">•</span>
                            <i class="fas fa-clock me-2"></i>
                            20–30 min prep time
                        </div>

                    </div>
                </div>

            </div>
        </div>

    </div>
</section>
<script>
    (function () {
        // Qty controls
        var dec = document.querySelector('.btn-decrease');
        var inc = document.querySelector('.btn-increase');
        var qty = document.getElementById('quantity');
        if (dec && inc && qty) {
            dec.addEventListener('click', function () {
                var v = parseInt(qty.value) || 1;
                if (v > parseInt(qty.min || 1)) qty.value = v - 1;
            });
            inc.addEventListener('click', function () {
                var v = parseInt(qty.value) || 1;
                var max = parseInt(qty.max) || 99;
                if (v < max) qty.value = v + 1;
            });
        }

        // AJAX add-to-cart with feedback
        var form = document.getElementById('details-add-form');
        var btn = document.getElementById('details-add-btn');
        if (form && btn) {
            form.addEventListener('submit', function (e) {
                e.preventDefault();
                var formData = new FormData(form);
                btn.disabled = true;
                var orig = btn.innerHTML;
                btn.innerHTML = '<span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>Adding...';

                fetch(form.action, {
                    method: 'POST',
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest'
                    },
                    body: formData,
                    credentials: 'same-origin'
                }).then(function (res) {
                    if (!res.ok) throw new Error('Network response was not ok');
                    return res.json().catch(function () { return { success: true }; });
                }).then(function (data) {
                    btn.disabled = false;
                    btn.innerHTML = orig;
                    // Simple success visual: show small alert
                    var wrapper = document.createElement('div');
                    wrapper.className = 'alert alert-success mt-3';
                    wrapper.role = 'alert';
                    wrapper.innerText = (data && data.message) ? data.message : 'Added to cart';
                    form.parentNode.insertBefore(wrapper, form.nextSibling);
                    setTimeout(function () { wrapper.remove(); }, 3000);
                }).catch(function (err) {
                    btn.disabled = false;
                    btn.innerHTML = orig;
                    var wrapper = document.createElement('div');
                    wrapper.className = 'alert alert-danger mt-3';
                    wrapper.role = 'alert';
                    wrapper.innerText = 'Could not add to cart. Please try again.';
                    form.parentNode.insertBefore(wrapper, form.nextSibling);
                    setTimeout(function () { wrapper.remove(); }, 4000);
                });
            });
        }
    })();
</script>