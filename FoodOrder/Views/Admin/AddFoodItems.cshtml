@model FoodItem

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">Add New Food Item</h3>
                </div>

                <div class="card-body">
                    <form asp-Controller = "Admin" asp-action="Create" method="post" enctype="multipart/form-data">

                        <div class="mb-3">
                            <label class="form-label">Food Name</label>
                            <input asp-for="Name" class="form-control" placeholder="e.g. Zinger Burger" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter ingredients..."></textarea>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Price ($)</label>
                                <input asp-for="Price" type="number" step="0.01" class="form-control" placeholder="0.00" required />
                            </div>

                           @*  <div class="col-md-6 mb-3">
                                <label class="form-label">Category</label>
                                <select asp-for="CategoryID" class="form-select">
                                    <option value="">Select Category</option>
                                    <option value="1">Fast Food</option>
                                    <option value="2">Drinks</option>
                                    <option value="3">Desi</option>
                                </select>
                            </div>
                        </div> *@

                        <div class="mb-3">
                            <label class="form-label">Food Image</label>
                            <input type="file" name="imageFile" class="form-control" />
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg">Add Item</button>
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        </div>

                    </form>
                </div>
            </div>

        </div>
    </div>
</div>